doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      meta(name='description', content=locals.description)
      title
        block title
          = locals.name
      link(rel='shortcut icon', type='image/x-icon', href='/img/favicon.ico')
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/main.css')
      //if lt IE 9
        script(src="/js/html5shiv.js")
  body(class=bodyclass)
    div.container
      div.row
        #sidebar.col-xs-12.col-sm-3(role='navigation')
          header
            block header
              h1
                a(href=locals.url)= locals.name
              include author
              mixin author(locals.owner)
          .sidebar-nav
            ul.nav
              li
                a(href='/') index
              li
                a(href='/about.html') about
              li
                a(href='/resume.html') resume
              li
                a(href='/archive.html') archives
        #content.col-xs-12.col-sm-9.col-xs-offset-0.col-sm-offset-3
          block content
            h2 Welcome to zombocom!
          block pager
      footer
        block footer
          p.text-center.text-muted
            != contents['footer.md'].html
    script(src='/js/main.js')
