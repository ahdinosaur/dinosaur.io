doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      meta(name='description', content=locals.description)
      title
        block title
          = locals.name
      link(rel='shortcut icon', type='image/x-icon', href='/img/favicon.ico')
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/main.css')
      //if lt IE 9
        script(src="/js/html5shiv.js")
  body(class=bodyclass)
    .row
      header.header(role='navigation')
        block header
          h1
            a(href=locals.url)= locals.name
          include author
          mixin author(locals.owner)
      .content.container
        block content
    footer.footer
      block footer
        ul.nav.nav-pills
          li
            a(href="https://github.com/ahdinosaur/dinosaur.io").githubSprite
          li
            a(href="http://creativecommons.org/licenses/by-sa/3.0/", rel="license").cc-by-saSprite
          li
            a(href="http://debian.org").debianSprite
          li
            a(href="http://opensource.org/osd").opensourceSprite
          li
            a(href="http://validator.w3.org/check?uri=" + locals.url).html5Sprite
          li
            a(href="http://jigsaw.w3.org/css-validator/validator?uri=" + locals.url + "&amp;profile=css3").css3Sprite
          li
            a(href="http://ipv6-test.com/validate.php?url=" + locals.url).ipv6Sprite
    script(src='/js/main.js')
