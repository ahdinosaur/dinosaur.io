
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  h1
    a(href=page.url)= page.title
  include author
  mixin author(page.metadata.author)

block content
  include pager
  article.article
    section!= typogr(page.html).typogrify()
  +pager(page)
